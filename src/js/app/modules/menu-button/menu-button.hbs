<div class="panel hidden" id="js">
    <section class="usage">
        <header class="title">
            <a>Usage</a>
        </header>
        <div class="highlight">
            <pre>
                <code class="language-html" data-lang="html">
                    NEW WAY:

                    var menuButton = document.createElement('ha-menu-button'),
                    &nbsp;&nbsp;&nbsp;&nbsp;item1 = document.createElement('ha-item'),
                    &nbsp;&nbsp;&nbsp;&nbsp;item2 = document.createElement('ha-item'),
                    &nbsp;&nbsp;&nbsp;&nbsp;item3 = document.createElement('ha-item'),
                    &nbsp;&nbsp;&nbsp;&nbsp;item4 = document.createElement('ha-item');

                    item1.label = 'Apple';
                    item1.value = 'AppleValue';
                    item2.label = 'Banana';
                    item2.value = 'BananaValue';
                    item3.label = 'Ballon';
                    item3.value = 'BalloonValue';
                    item4.label = 'Melon';
                    item4.value = 'MelonValue';

                    menuButton.classList.add('ha-button-primary');
                    menuButton.label = 'Fruits';
                    menuButton.disabled = false;
                    menuButton.items = [item1, item2, item3, item4];
                    menuButton.icon = 'hi-send';
                    menuButton.mobileCancelText = 'Cancel Selection';

                    //DEPRECATED WAY:

                    var menuButton = document.createElement("ha-menu-button"),
                    &nbsp;&nbsp;&nbsp;&nbsp;popover = document.createElement("ha-popover"),
                    &nbsp;&nbsp;&nbsp;&nbsp;menu = document.createElement("ha-menu"),
                    &nbsp;&nbsp;&nbsp;&nbsp;item1 = document.createElement("ha-menu-item"),
                    &nbsp;&nbsp;&nbsp;&nbsp;item2 = document.createElement("ha-menu-item"),

                    item1.label = "Basic paragraph style";
                    item2.label = "Basic paragraph style";

                    menu.items = [item1, item2];

                    popover.addContent(menu);

                    menuButton.classList.add("ha-button-primary");
                    menuButton.label = "Create New";
                    menuButton.disabled = false;
                    menuButton.popover = popover;
                </code>
            </pre>
        </div>
